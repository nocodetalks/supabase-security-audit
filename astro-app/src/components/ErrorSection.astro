<section id="error-section" class="hidden py-20">
  <div class="max-w-md mx-auto px-6 text-center">
    <div class="w-12 h-12 rounded-full bg-red-50 flex items-center justify-center mx-auto mb-4">
      <svg class="w-6 h-6 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"/>
      </svg>
    </div>
    <h2 class="text-xl font-medium text-geist-0 mb-2">Analysis Failed</h2>
    <p id="error-message" class="text-14 text-geist-400 mb-6">An error occurred while analyzing your project.</p>
    <button id="retry-btn" class="h-10 px-4 rounded-vercel border border-accents-2 text-14 font-medium hover:border-geist-0 transition-colors">
      Try Again
    </button>
  </div>
</section>
